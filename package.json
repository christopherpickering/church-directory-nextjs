{
  "name": "@payloadcms/template-website",
  "version": "1.0.0",
  "description": "Website template for Payload",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation biome lint .",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "test:fix": "run-s format:fix lint:fix",
    "test:check": "run-p lint typecheck format",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "prepare": "husky",
    "typecheck": "tsc --project tsconfig.json",
    "migrate": "cross-env NODE_OPTIONS=--no-deprecation payload migrate"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "dependencies": {
    "@meilisearch/instant-meilisearch": "^0.25.0",
    "@payloadcms/admin-bar": "^3.28.1",
    "@payloadcms/db-mongodb": "^3.28.1",
    "@payloadcms/db-postgres": "^3.28.1",
    "@payloadcms/email-nodemailer": "^3.32.0",
    "@payloadcms/live-preview-react": "^3.28.1",
    "@payloadcms/next": "^3.28.1",
    "@payloadcms/plugin-search": "^3.28.1",
    "@payloadcms/richtext-lexical": "^3.28.1",
    "@payloadcms/ui": "^3.28.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@types/leaflet": "^1.9.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.5.2",
    "geist": "^1.3.0",
    "graphql": "^16.8.2",
    "leaflet": "^1.9.4",
    "leaflet-defaulticon-compatibility": "^0.1.2",
    "leaflet-geosearch": "^4.2.0",
    "leaflet.fullscreen": "^4.0.0",
    "leaflet.markercluster": "^1.5.3",
    "lucide-react": "^0.487.0",
    "meilisearch": "^0.49.0",
    "next": "15.3.0",
    "next-sitemap": "^4.2.3",
    "payload": "^3.28.1",
    "prism-react-renderer": "^2.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.55.0",
    "react-leaflet": "^5.0.0",
    "sharp": "0.34.1",
    "tailwind-merge": "^3.0.0",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@tailwindcss/postcss": "4.1.3",
    "@tailwindcss/typography": "0.5.16",
    "@types/escape-html": "1.0.4",
    "@types/node": "22.14.1",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.2",
    "commitizen": "4.3.1",
    "copyfiles": "2.4.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "npm-run-all2": "7.0.2",
    "postcss": "8.5.3",
    "prettier": "^3.4.2",
    "tailwindcss": "4.1.3",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["sharp"]
  }
}
